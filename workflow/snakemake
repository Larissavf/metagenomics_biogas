import os
import glob


SAMPLES = [os.path.basename(x).rstrip(".fastq") for x in glob.glob("/students/2023-2024/Thema07/biogas/fastq/*")]

rule all:
    input:
        expand('/students/2023-2024/Thema07/biogas/qc/fastqc/{sample}.html', sample = SAMPLES)


rule fastqc:
    input:
        '/students/2023-2024/Thema07/biogas/fastq/{sample}.fastq'

    output:
        '/students/2023-2024/Thema07/biogas/qc/fastqc/{sample}.html'

    shell:
        'fastqc {input} --outdir /students/2023-2024/Thema07/biogas/qc/fastqc/'
