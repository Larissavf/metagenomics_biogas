configfile: 'config/config.yaml'
samples = configfile["samples"]
rule nanoplot_qc:
    input:
        expand('{dir}', dir=configfile['seqsum_file'])
    output:
        directory(expand('/students/2023-2024/Thema07/biogas/qc/{sample}', sample=samples))
    conda:
        'envs/trimming.yaml' 
    shell:
        'Nanoplot --summary {input} -o {output}'